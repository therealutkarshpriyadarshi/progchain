# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./progchain.db
TEST_DATABASE_URL=sqlite+aiosqlite:///./test_progchain.db

# For PostgreSQL (production):
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/progchain
# TEST_DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/test_progchain

# Server Configuration
DEBUG=true
HOST=0.0.0.0
PORT=8000
WORKERS=4
ENVIRONMENT=development

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://localhost:5174"]

# Logging
LOG_LEVEL=INFO

# File Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes

# Redis (for caching - optional)
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=false

# Security
SECRET_KEY=change-this-to-a-random-secret-key-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Sentry (Error Tracking - optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Feature Flags
ENABLE_RATE_LIMITING=true
ENABLE_AUTHENTICATION=false

# Testing
TESTING=false
MOCK_OPENAI=false
